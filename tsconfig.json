{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*", "*"]
    },
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
